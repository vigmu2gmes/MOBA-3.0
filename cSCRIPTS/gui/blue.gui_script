local g = require("cSCRIPTS.GAME.game")

function init(self)
	gui.set_size(gui.get_node("health"), vmath.vector4(g.base_blue_health, 10, 0, 0))
end


function update(self, dt)
	gui.set_size(gui.get_node("health"), vmath.vector4(g.blue_base_damage_report, 10, 0, 0))

	if g.blue_base_damage_report <= 0 then
		g.room:send("building_destroyed", { id = "blue" })
	end
end


